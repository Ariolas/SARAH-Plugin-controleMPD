    <example>Sarah tu es cool</example>
    <tag>out.action=new Object(); </tag>
	<tag>out.action.piece="";</tag>

    <item>Sarah</item>

    <one-of>
      <item>musique suivante<tag>out.action.commande="next"</tag></item>
